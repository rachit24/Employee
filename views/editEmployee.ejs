<%- include("./partials/header") %>

<div class="container1 m-3">
    <center><h1 class="mb-3">Update The Record</h1></center>
    <form action="/edit/<%= employee._id %>" method="POST" class="row g-3">
        <div class="col-md-4">
          <label for="validationCustom01" class="form-label">First name</label>
          <input type="text" name="fname" class="form-control" id="validationCustom01" value="<%= employee.fname %>" readonly>
        </div>
        <div class="col-md-4">
          <label for="validationCustom02" class="form-label">Last name</label>
          <input type="text" name="lname" class="form-control" value="<%= employee.lname %>" id="validationCustom02" readonly>
        </div>
        <div class="col-md-4">
          <label for="validationCustomUsername" class="form-label">Contact Number</label>
            <input type="text" name="cno" class="form-control" value="<%= employee.cno %>" id="validationCustomUsername" aria-describedby="inputGroupPrepend" required>
        </div>
        <div class="col-md-6">
          <label for="validationCustom03" class="form-label">Job Title</label>
          <input type="text" name="des" class="form-control" value="<%= employee.des %>" id="validationCustom03">
        </div>
        <div class="col-md-3">
          <label for="validationCustom04" class="form-label">Sex</label>
          <select class="form-select" name="sex" id="validationCustom04"> 
            <option selected disabled value=""><%= employee.sex %></option>
          </select>
        </div>
        <div class="col-md-3">
          <label for="validationCustom05" class="form-label">Date of Birth</label>
          <input type="date" name="dob" class="form-control" value="<%= employee.dob %>" id="validationCustom05"readonly>
        </div>
        <div class="form-group col-md-6">
          <label for="exampleFormControlTextarea1">Address</label>
          <textarea class="form-control" name="address" id="exampleFormControlTextarea1" rows="3"><%= employee.address %></textarea>
        </div>
        <div class="form-group col-md-6">
          <label for="exampleFormControlTextarea1">Job Description</label>
          <textarea class="form-control" name="job" id="exampleFormControlTextarea1" rows="3"><%= employee.job %></textarea>
        </div>
        <div class="col-md-6">
          <label for="validationCustom03" class="form-label">Email Address</label>
          <input type="email" name="email" class="form-control" id="validationCustom03" value="<%= employee.email %>" required>
        </div>
        <div class="col-md-2">
          <label for="validationCustom03" class="form-label">Upload Identity Proof</label>
          <input type="file" id="myFile" name="filename" class="py-1">
        </div>
        <div class="col-md-1 mt-5">
          <input type="submit" value="Upload">
        </div>        
        <div class="col-12">
          <button class="btn btn-primary" type="submit">Save Changes</button>
        </div>
    </form>
</div>

<%- include("./partials/footer") %>